<% layout('/layouts/boilerplate') -%>

<!-- Hero Section -->
<section class="relative z-10 pt-36 pb-12 px-4">
  <div class="max-w-6xl mx-auto text-center">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 bg-gradient-to-r from-purple-400 via-pink-400 to-purple-400 bg-clip-text text-transparent">
      Discover Your Next Adventure
    </h1>
    <p class="text-lg md:text-xl text-gray-300 mb-6 max-w-3xl mx-auto">
      Explore unique stays and unforgettable experiences around the world
    </p>
    
    <!-- Create New Listing Button -->
    <form method="GET" action="/listings/new" class="inline-block">
      <button class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-semibold py-3 px-8 rounded-full transition-all duration-300 shadow-lg hover:shadow-purple-500/50 hover:scale-105">
        <i class="fas fa-plus mr-2"></i>Create New Listing
      </button>
    </form>
  </div>
</section>

<!-- Category Filters (Optional) -->
<div class="relative z-10 px-4 pb-6">
  <div class="max-w-7xl mx-auto">
    <div class="flex gap-3 overflow-x-auto pb-2 scrollbar-hide">
      <button class="px-5 py-2.5 bg-white text-black rounded-full font-medium whitespace-nowrap shadow-lg hover:shadow-xl transition-all">
        <i class="fas fa-fire mr-2"></i>All Listings
      </button>
      <button class="px-5 py-2.5 bg-gray-800/60 hover:bg-gray-700/60 backdrop-blur-lg text-white rounded-full whitespace-nowrap transition-all border border-gray-700">
        <i class="fas fa-umbrella-beach mr-2"></i>Beachfront
      </button>
      <button class="px-5 py-2.5 bg-gray-800/60 hover:bg-gray-700/60 backdrop-blur-lg text-white rounded-full whitespace-nowrap transition-all border border-gray-700">
        <i class="fas fa-mountain mr-2"></i>Mountains
      </button>
      <button class="px-5 py-2.5 bg-gray-800/60 hover:bg-gray-700/60 backdrop-blur-lg text-white rounded-full whitespace-nowrap transition-all border border-gray-700">
        <i class="fas fa-tree mr-2"></i>Countryside
      </button>
      <button class="px-5 py-2.5 bg-gray-800/60 hover:bg-gray-700/60 backdrop-blur-lg text-white rounded-full whitespace-nowrap transition-all border border-gray-700">
        <i class="fas fa-city mr-2"></i>Urban
      </button>
    </div>
  </div>
</div>

<!-- Section Header -->
<div class="relative z-10 px-4 mb-6">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold text-white mb-1">
      Featured Stays
    </h2>
    <p class="text-gray-400">Handpicked properties for your perfect getaway</p>
  </div>
</div>

<!-- Listings Grid -->
<div class="relative z-10 px-4 pb-16">
  <div class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% for (let list of listingsData) { %>
      <a href="/listings/<%= list.id %>" class="group block">
        <div class="relative rounded-3xl overflow-hidden shadow-lg bg-white hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-300 hover:scale-105">
          <!-- Image Container with Overlay -->
          <div class="relative overflow-hidden">
            <img 
              class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110" 
              src="<%= list.image.url %>" 
              alt="<%= list.title %>" 
            />
            <!-- Wishlist Button -->
            <button class="absolute top-4 right-4 w-10 h-10 bg-black/40 hover:bg-black/60 backdrop-blur-sm rounded-full flex items-center justify-center transition-all z-10" onclick="event.preventDefault();">
              <i class="far fa-heart text-white"></i>
            </button>
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          
          <!-- Card Content -->
          <div class="px-5 py-4">
            <h3 class="font-bold text-xl mb-2 text-gray-900 group-hover:text-purple-600 transition-colors line-clamp-1">
              <%= list.title %>
            </h3>
            <p class="text-gray-700 text-lg font-semibold">
              â‚¹<%= list.price.toLocaleString("en-IN") %> <span class="text-sm font-normal text-gray-500">/night</span>
            </p>
            
            <!-- Optional: Add location if available -->
            <% if (list.location) { %>
              <p class="text-gray-500 text-sm mt-1">
                <i class="fas fa-map-marker-alt mr-1"></i><%= list.location %>
              </p>
            <% } %>
          </div>
          
          <!-- Action Buttons -->
          <div class="px-5 pb-5 flex gap-2">
            <button class="flex-1 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-semibold py-2.5 px-4 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg" onclick="event.preventDefault(); window.location.href='/listings/<%= list.id %>'">
              View Details
            </button>
            <button class="bg-gray-100 hover:bg-gray-200 text-gray-800 font-semibold py-2.5 px-4 rounded-lg transition-all duration-300" onclick="event.preventDefault();">
              <i class="fas fa-share-alt"></i>
            </button>
          </div>
        </div>
      </a>
    <% } %>
  </div>
  
  <!-- No Listings Message -->
  <% if (listingsData.length === 0) { %>
    <div class="text-center py-16">
      <i class="fas fa-home text-6xl text-gray-600 mb-4"></i>
      <h3 class="text-2xl font-bold text-white mb-2">No Listings Found</h3>
      <p class="text-gray-400 mb-6">Be the first to create a listing!</p>
      <form method="GET" action="/listings/new" class="inline-block">
        <button class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-semibold py-3 px-8 rounded-full transition-all duration-300">
          <i class="fas fa-plus mr-2"></i>Create Your First Listing
        </button>
      </form>
    </div>
  <% } %>
</div>