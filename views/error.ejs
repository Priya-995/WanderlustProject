
<% layout('/layouts/boilerplate') -%>
<div class="container mx-auto px-4 py-8 mt-32 max-w-2xl">
  <div id="errorAlert" class="bg-gradient-to-r from-red-50 to-red-100 border-l-4 border-red-600 rounded-xl shadow-2xl p-6 transform transition-all duration-300 hover:scale-[1.02] hover:shadow-3xl">
    
    <!-- Alert Content Wrapper -->
    <div class="flex items-start space-x-4">
      
      <!-- Icon Container -->
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center shadow-lg animate-pulse">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
      </div>
      
      <!-- Text Content -->
      <div class="flex-1 pt-1">
        <h3 class="text-2xl font-bold text-red-900 mb-2 tracking-tight">
          Error Occurred!
        </h3>
        <p class="text-red-800 text-lg leading-relaxed font-medium">
          <%= message %>
        </p>
      </div>
      
      
      
    </div>
    
    <!-- Optional: Progress Bar (auto-dismiss indicator) -->
    <div class="mt-4 h-1 bg-red-200 rounded-full overflow-hidden">
      <div id="progressBar" class="h-full bg-red-600 rounded-full transition-all duration-[5000ms] ease-linear w-0"></div>
    </div>
    
  </div>
</div>